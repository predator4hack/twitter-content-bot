# YouTube to Twitter Clipper Environment Configuration
# Copy this file to .env and fill in your API keys

# LLM API Configuration
GOOGLE_API_KEY=your_google_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Application Settings
DEFAULT_LLM_PROVIDER=gemini  # Options: gemini, groq
MAX_VIDEO_DURATION=600  # Maximum video duration in seconds (10 minutes)
MAX_CLIP_DURATION=140   # Maximum clip duration in seconds (2:20 for Twitter)
DEFAULT_CLIP_COUNT=3    # Number of clips to extract by default

# Processing Settings
WHISPER_MODEL=small     # Options: tiny, base, small, medium, large
PARALLEL_PROCESSING=true
MAX_CONCURRENT_CLIPS=3

# Storage Settings
TEMP_DIR=./temp
OUTPUT_DIR=./output
CACHE_DIR=./cache
CLEANUP_TEMP_FILES=true

# Logging Configuration
LOG_LEVEL=INFO          # Options: DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true
LOG_FILE=app.log

# YouTube Download Settings
YTDL_QUALITY=720p       # Options: 480p, 720p, 1080p, best
YTDL_FORMAT=mp4
EXTRACT_THUMBNAILS=true

# Twitter Optimization Settings
TARGET_FILESIZE_MB=50   # Target file size for Twitter clips
VIDEO_BITRATE=1000k     # Video bitrate for optimization
AUDIO_BITRATE=128k      # Audio bitrate for optimization
