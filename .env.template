# YouTube to Twitter Clipper Environment Configuration
# Copy this file to .env and fill in your API keys

# LLM API Configuration
GOOGLE_API_KEY=your_google_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Application Settings
DEFAULT_LLM_PROVIDER=gemini
MAX_VIDEO_DURATION=600
MAX_CLIP_DURATION=140
DEFAULT_CLIP_COUNT=3

# Processing Settings
WHISPER_MODEL=small
PARALLEL_PROCESSING=true
MAX_CONCURRENT_CLIPS=3

# Storage Settings
TEMP_DIR=./temp
OUTPUT_DIR=./output
CACHE_DIR=./cache
CLEANUP_TEMP_FILES=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE=app.log

# YouTube Download Settings
YTDL_QUALITY=720p
YTDL_FORMAT=mp4
EXTRACT_THUMBNAILS=true

# Twitter Optimization Settings
TARGET_FILESIZE_MB=50
VIDEO_BITRATE=1000k
AUDIO_BITRATE=128k

# Network Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=5

# Bot Detection Avoidance Settings
RANDOMIZE_USER_AGENTS=true
USE_MOBILE_CLIENTS=true
RATE_LIMIT_DELAY=1.0
MAX_RETRIES=5

# Bot Detection Avoidance Settings
RANDOMIZE_USER_AGENTS=true
USE_MOBILE_CLIENTS=true
RATE_LIMIT_DELAY=1.0

WHISPER_DEVICE=cpu
WHISPER_COMPUTE_TYPE=int8
CUDA_VISIBLE_DEVICES=""
